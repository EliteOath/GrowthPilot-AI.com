{
    "buildCommand": "pnpm build",
    "installCommand": "pnpm install --shamefully-hoist",
    "env": {
        "NODE_ENV": "production"
    },
    "rewrites": [
        {
            "source": "/api/(.* )",
            "destination": "/dist/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/dist/public/$1"
        }
    ]
}